{
  "compilerOptions": {
    "target": "ES2023",

    // üëá –ß—Ç–æ–±—ã VS Code –∫–æ—Ä—Ä–µ–∫—Ç–Ω–æ —Ä–µ–∑–æ–ª–≤–∏–ª ESM-–ø–∞–∫–µ—Ç—ã c "exports"
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",

    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "incremental": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "types": ["node"],
    "lib": ["ES2023"],

    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,

    // —Ä–µ–¥–∞–∫—Ç–æ—Ä—É –Ω–∏—á–µ–≥–æ –Ω–µ —ç–º–∏—Ç–∏—Ç—å
    "noEmit": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts"],
  "ts-node": { "files": true }
}